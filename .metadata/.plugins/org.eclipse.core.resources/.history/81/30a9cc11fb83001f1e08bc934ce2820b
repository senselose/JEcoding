package Lv2_Programmers;

public class 이진_변환_반복하기 {

	public static void main(String[] args) {
		// 문자열에서 0 모두 제거하기.
		String s = "0111010";
		String tempS = s;
		// 2진법 변환 횟수를 저장할 변수
        int count = 0;
        // 제거된 0의 개수를 저장할 변수
        int zeroCount = 0;
		
        // tempS가 "1"이 될 때까지 반복
        while (!tempS.equals("1")) {
            String result = "";
            
            // tempS에서 '1'만 남기고 '0'은 제거
            for (int i = 0; i < tempS.length(); i++) {
                if (tempS.charAt(i) == '1') {
                    result += tempS.charAt(i);
                } else {
                    zeroCount++; // '0'의 개수를 카운트
                }
            }

            // 남은 1의 개수를 2진수로 변환
            int length = result.length();
            tempS = Integer.toBinaryString(length);

            // 변환 횟수 증가
            count++;
        }

        // 최종 변환 횟수 및 제거된 0의 개수 출력
        System.out.println("최종 변환 횟수: " + count);
        System.out.println("제거된 0의 총 개수: " + zeroCount);
		
		
		
	}

}
